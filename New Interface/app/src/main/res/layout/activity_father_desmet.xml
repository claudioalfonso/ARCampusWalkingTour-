<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="com.example.schwartz.myapplication.FatherDesmetActivity">


    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Father Desmet"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/desmet1" />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="344dp"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum sed pretium lacus, eget mattis enim. Aenean sed lacus dapibus, tincidunt felis ac, consectetur velit. Phasellus ac ligula in lectus rhoncus tincidunt. Fusce suscipit mi ac leo lacinia consectetur. Donec a rhoncus nunc. Phasellus tempor ut velit a tincidunt."
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </GridLayout>
    </ScrollView>

</LinearLayout>
